<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.login_JWT_Token.dao.UserMapper">

    <resultMap id="BaseResultMap" type="com.example.login_JWT_Token.entities.User">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="name" property="userName" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
    </resultMap>

    <insert id="insert">
        insert into User (username, password, roles)
        values (#{username}, #{password}, #{roles});
    </insert>
    <select id="findUserByUsername" resultType="com.example.login_JWT_Token.entities.User">
        SELECT * FROM user WHERE username = #{username};
    </select>


</mapper>